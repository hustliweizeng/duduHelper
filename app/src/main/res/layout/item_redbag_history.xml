<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_marginTop="8dp"
              android:background="@color/bg_white_color"
              android:layout_width="match_parent"
              android:layout_height="80dp">
    
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_price_hist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥3.99"
        android:textSize="18dp"
        android:textColor="@color/text_red_color"
        />
        <TextView
            android:id="@+id/tv_status_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price_hist"
            android:text="未使用"
            android:textSize="14dp"
            android:textColor="@color/text_gray_color"
            />
        


    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/line2"
        />

 
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红星咖啡红包"
            android:textSize="18dp"
            android:textColor="@color/text_dark_color"
            />
        <TextView
            android:id="@+id/tv_name_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_his"
            android:layout_marginTop="6dp"
            android:text="领取人:王二蛋"
            android:textSize="14dp"
            android:textColor="@color/text_gray_color"
            />
        <TextView
            android:id="@+id/tv_expireTime_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_his"
            android:layout_marginTop="6dp"
            android:text="过期时间:2016-07-31 "
            android:textSize="14dp"
            android:textColor="@color/text_gray_color"
            />

    </RelativeLayout>
    

</LinearLayout>