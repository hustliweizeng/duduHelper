<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.dudu.duduhelper.BindPhoneActivity">

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />
    <RelativeLayout
        android:id="@+id/bind_phone_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/head"
        android:background="@drawable/view_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="绑定手机号码"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phoneNumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:text="15038888888"
            android:textColor="@color/text_color_light"
            android:textSize="14dp" />

    </RelativeLayout>
    <Button
        android:id="@+id/editPhonebutton" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="立即更改"
        android:textColor="#fff"
        android:textSize="16sp"
        android:background="@drawable/btn_larg_bg"/>

</LinearLayout>
