<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.dudu.helper3.Activity.MyInfoActivity.ShopInfoEditActivity" >
    <include layout="@layout/activity_head"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_logo_shop_info"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:background="@color/bg_white_color" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="店铺缩略"
                    android:gravity="center"
                    android:textColor="@color/text_dark_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_logo_shop_info"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv1"
                    android:src="@drawable/ic_defalut"
                     />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/bg_white_color"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/view_selector"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="店铺名称"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_dark_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ed_title_shop_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:layout_marginRight="45dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输入店铺名称"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_dark_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/list_divide" />

                <RelativeLayout
                    android:id="@+id/rl_class_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/view_selector"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="行业分类"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_dark_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_class_shop_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请选择行业分类"
                        android:layout_toLeftOf="@+id/iv2"
                        android:textColor="@color/text_dark_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/list_divide" />

                <RelativeLayout
                    android:id="@+id/rl_shopcircle_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/view_selector"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="选择商圈"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_dark_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_shopcircle_shop_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="请选择商圈分类"
                        android:layout_toLeftOf="@+id/iv3"
                        android:textColor="@color/text_dark_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_arrow" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/list_divide" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/view_selector"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="联系电话"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_dark_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ed_mobile_shop_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="45dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="请输入联系方式"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_middledark_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/list_divide" />

                <RelativeLayout
                    android:id="@+id/rl_opentime_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/view_selector"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="营业时间"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_dark_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_opentime_shop_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请选择营业时间"
                        android:layout_toLeftOf="@+id/iv4"
                        android:textColor="@color/text_middledark_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/icon_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/list_divide" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/view_selector"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="店铺地址"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_dark_color"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ed_address_shop_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="16dp"
                        android:gravity="center|right"
                        android:background="@null"
                        android:hint="请输入店铺地址"
                        android:textColor="@color/text_middledark_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:id="@+id/ed_scroll"
                android:layout_width="match_parent"
                android:layout_height="106dp">
                <EditText
                    android:id="@+id/ed_des_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/bg_white_color"
                    android:enabled="true"
                    android:gravity="top"
                    android:hint="请输入店铺详情"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:minLines="4"
                    android:padding="7dp"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="14dp" />
                
            </ScrollView>
          

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_img_shop_info"
                    android:layout_width="96dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/btn_white_bg"
                    android:src="@drawable/ic_defalut"
                    android:padding="4dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/tv_imgNum_shop_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="相册共0张"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_subimt_shop_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shop_normal_btn_bg"
                android:text="提  交"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />

</LinearLayout>