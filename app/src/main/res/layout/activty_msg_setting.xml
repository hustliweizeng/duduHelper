<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="@color/bg_color"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/activity_head"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/bg_white_color"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:drawableLeft="@drawable/ic_voice"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="语音提示"
            android:textSize="16dp"
            />
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/btn_voice"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            app:kswTintColor="@color/btn_color"
            app:kswThumbColor="@color/bg_white_color"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:background="@color/bg_white_color"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:drawableLeft="@drawable/ic_ring"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="系统提示音"
            android:textSize="16dp"
            />
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/btn_ring"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            app:kswThumbColor="@color/bg_white_color"
            app:kswTintColor="@color/btn_color"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:background="@color/bg_white_color"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:drawableLeft="@drawable/ic_bing"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="震动提示"
            android:textSize="16dp"
            />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/btn_ding"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            app:kswThumbColor="@color/bg_white_color"
            app:kswTintColor="@color/btn_color"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:background="@color/bg_white_color"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:drawableLeft="@drawable/ic_auto_print"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="自动打印"
            android:textSize="16dp"
            />
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/btn_auto_print"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            app:kswThumbColor="@color/bg_white_color"
            app:kswTintColor="@color/btn_color"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>