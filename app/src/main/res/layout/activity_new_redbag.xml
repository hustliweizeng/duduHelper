<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_create_redbag"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />


    <LinearLayout
        android:id="@+id/ll_create_redbag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/create_red_bag"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/new_redbag_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/redbag_title"
            android:background="@drawable/create_red_bag"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/new_redbag_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="创建消费返红包"
                android:textColor="@color/text_black_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/new_redbag_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_redbag_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/text_color_gray"
                android:text="消费返红包活动，在会员消费后，立即获得红包，下次微信支付时使用。大大提升会员到店消费意愿。"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/new_redbag_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_create_redbag"
                android:text="开始创建"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>