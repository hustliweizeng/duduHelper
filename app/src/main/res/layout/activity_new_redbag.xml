<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_create_redbag"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context="com.dudu.duduhelper.CreateRedBagActivity"

    >

    <RelativeLayout
        android:id="@+id/relayout_mytitle"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_head_bg"
            android:paddingBottom="14dp"
            android:paddingRight="20dp"
            android:paddingTop="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_btn_fanhui"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="创建红包"
            android:textColor="@color/bg_white_color"
            android:textSize="19sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_create_redbag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/create_red_bag"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/new_redbag_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/create_red_bag"
                android:scaleType="fitXY"
                android:src="@drawable/redbag_bg"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/new_redbag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="创建消费返红包"
                    android:textColor="@color/text_black_color"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/new_redbag_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/new_redbag_title"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="6sp"
                    android:text="消费返红包活动，在会员消费后，立即获得红包，下次微信支付时使用。大大提升会员到店消费意愿。"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_create_redbag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/new_redbag_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_create_redbag"
                    android:text="开始创建"
                    android:textSize="16sp"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>