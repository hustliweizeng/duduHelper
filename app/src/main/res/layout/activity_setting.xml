<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    tools:context="com.dudu.duduhelper.SettingActivity" >

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />

    <RelativeLayout
        android:id="@+id/bind_phone_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/head"
        android:background="@drawable/view_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="绑定手机号码"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phoneNumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/icon_arror"
            android:text=""
            android:textColor="@color/text_color_light"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/icon_arror"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/icon_jiantou_xia" />
    </RelativeLayout>
    <View 
        android:id="@+id/lin1"
        android:layout_below="@+id/bind_phone_line"
        android:layout_width="match_parent"
        android:background="@color/line_color_gray"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/shopecodeimageRel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lin1"
        android:background="@drawable/view_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="店铺二维码"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/icon_arror2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/icon_jiantou_xia" />
    </RelativeLayout>
    <View 
        android:id="@+id/lin2"
        android:layout_below="@+id/shopecodeimageRel"
        android:layout_width="match_parent"
        android:background="@color/line_color_gray"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/paycodeimageRel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lin2"
        android:background="@drawable/view_selector"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="支付二维码"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/icon_arror3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/icon_jiantou_xia" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bind_weixin_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/view_selector"
        android:visibility="gone"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="绑定微信号"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/icon_arror1"
            android:text=""
            android:textColor="@color/text_color_light"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/icon_arror1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/icon_jiantou_xia" />
    </RelativeLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="退出登录"
        android:textColor="#fff"
        android:background="@drawable/btn_red_bg"
        android:textSize="16sp" />

</RelativeLayout>