<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.dudu.duduhelper.ShopHongBaoDetailActivity" >

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />

   <com.dudu.duduhelper.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hongbaoBtnfoot"
        android:layout_below="@+id/head"
        android:fillViewport="true" > -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="@drawable/view_selector" >

                <ImageView
                    android:id="@+id/hongbaoImage"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/btn_white_bg"
                    android:src="@drawable/icon_food" />

                <TextView
                    android:id="@+id/hongbaoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_toRightOf="@+id/hongbaoImage"
                    android:text=""
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hongbaoStartTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/hongbaoImage"
                    android:text="开始时间："
                    android:textColor="@color/text_color_light"
                    android:textSize="14dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="红包金额统计"
                android:textColor="@color/text_color_gray"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:background="#fff"
                android:gravity="center_horizontal" >

                <com.dudu.duduhelper.widget.WheelIndicatorView
                    android:id="@+id/wheel_indicator_view"
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:layout_marginTop="18dp"
                    app:backgroundColor="@color/text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.dudu.duduhelper.widget.risenumbertextview.RiseNumberTextView
                        android:id="@+id/sendMoneyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/head_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="发放金额"
                        android:textColor="@color/text_gray_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.dudu.duduhelper.widget.risenumbertextview.RiseNumberTextView
                        android:id="@+id/getMoneyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/text_green_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="领取金额"
                        android:textColor="@color/text_gray_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.dudu.duduhelper.widget.risenumbertextview.RiseNumberTextView
                        android:id="@+id/useMoneyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/text_red_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="使用金额"
                        android:textColor="@color/text_gray_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="红包数量统计"
                android:textColor="@color/text_color_gray"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:background="#fff"
                android:gravity="center_horizontal" >

                <com.dudu.duduhelper.widget.WheelIndicatorView
                    android:id="@+id/wheel_indicator_view2"
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:layout_marginTop="16dp"
                    app:backgroundColor="@color/text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.dudu.duduhelper.widget.risenumbertextview.RiseNumberTextView
                        android:id="@+id/totalHongbaoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/head_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="红包总数"
                        android:textColor="@color/text_gray_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.dudu.duduhelper.widget.risenumbertextview.RiseNumberTextView
                        android:id="@+id/getHongbaoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/text_green_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="领取数量"
                        android:textColor="@color/text_gray_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.dudu.duduhelper.widget.risenumbertextview.RiseNumberTextView
                        android:id="@+id/useHongbaoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/text_red_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="使用数量"
                        android:textColor="@color/text_gray_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </com.dudu.duduhelper.widget.OverScrollView>

    <LinearLayout
        android:id="@+id/hongbaoBtnfoot"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/editHongbaoBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shop_keyboard_hexiao_text_select"
                android:text="编辑红包"
                android:textColor="@color/text_white_color"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>