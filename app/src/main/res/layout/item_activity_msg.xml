<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:padding="5dp"
            android:id="@+id/tv_date"
            android:background="@drawable/toast_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white_color"
            android:text="2016.10.10  10:22"
            />
       


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/detail_msg"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/uptop"/>
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十一七天乐翻天"
                android:textColor="@color/text_dark_color"
                android:textSize="20dp"
                />
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:gravity="top"
                android:text="国庆期间，凡是再本店购买商品的客户，都建获得惊喜大礼包一个"
                android:textSize="16dp"
                />
            
            
            
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/list_divide"/>

        
        <LinearLayout
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="收到通知"
                android:textSize="16dp"
                android:textColor="@color/text_dark_color"
                />
            <TextView
                android:id="@+id/msg_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37"
                android:textSize="16dp"
                android:textColor="@color/btn_color"
                />
            <TextView
                android:id="@+id/msg_send"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/50"
                android:textColor="@color/text_dark_color"
                />
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="发送失败"
                android:textSize="16dp"
                android:textColor="@color/text_dark_color"
                />

            <TextView
                android:id="@+id/msg_fail"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/btn_yellow"
                />
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                />

        </LinearLayout>
       



    </LinearLayout>


</LinearLayout>