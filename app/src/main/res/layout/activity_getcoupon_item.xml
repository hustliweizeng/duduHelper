<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selector"
        android:paddingBottom="12dp" >

        <TextView
            android:id="@+id/getcashtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:text="哈哈哈"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/getcashsellname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getcashtype"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:text="领取人："
            android:textColor="@color/text_color_light" />

        <TextView
            android:id="@+id/getcashsellnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/getcashtype"
            android:layout_marginRight="14dp"
            android:layout_marginTop="8dp"
            android:text="券号：44445555"
            android:textColor="@color/text_color_light" />

        <TextView
            android:id="@+id/getcashtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getcashsellname"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:text="过期时间："
            android:textColor="@color/text_color_light" />

        <TextView
            android:id="@+id/getcashaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/getcashsellname"
            android:layout_marginRight="14dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:background="@color/line_color_gray" />

</LinearLayout>