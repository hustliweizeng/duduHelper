<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        layout="@layout/activity_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color"
            >
        <LinearLayout
            android:id="@+id/ll_choose_guest"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_white_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="通知客户"
                android:textSize="16dp"
                android:textColor="@color/text_dark_color"
                />
            <TextView
                android:id="@+id/tv_guest_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50人"
                android:textSize="16dp"
                android:textColor="@color/text_dark_color"
                />
            <ImageView
                android:id="@+id/iv_select_guest"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                />


        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_white_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红包金额(元)"
                android:textSize="16dp"
                android:textColor="@color/text_dark_color"
                />
            <EditText
                android:id="@+id/ed_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:hint="请输入金额"
                android:textSize="16dp"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:textColor="@color/text_dark_color"
                />
          
        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_hint_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_white_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用条件"
                android:textSize="16dp"
                android:textColor="@color/text_dark_color"
                />
            <TextView
                
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="right"
                android:text="满"/>
            <EditText
                
                android:id="@+id/ed_requirement"
                android:layout_width="25dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:hint=""
                android:textSize="16dp"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:textColor="@color/text_dark_color"
                
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginRight="16dp"
                android:text="元可用"/>

        </LinearLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_hint_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_white_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期(天)"
                android:textSize="16dp"
                android:textColor="@color/text_dark_color"
                />
            <EditText
                android:id="@+id/ed_expireday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="21"
                android:gravity="right"
                android:textSize="16dp"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:textColor="@color/text_dark_color"
                />

        </LinearLayout>
        <Button
            android:id="@+id/submitbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:text="提交"
            android:textColor="@color/bg_white_color"
            android:textSize="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>


</LinearLayout>