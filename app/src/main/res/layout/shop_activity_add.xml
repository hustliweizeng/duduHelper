<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.dudu.duduhelper.Activity.ShopManageActivity.ShopAddActivity" >

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/bg_white_color"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/changeshopnamerel"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:background="@drawable/view_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="店铺名称"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <EditText
                android:gravity="center|right"
                android:id="@+id/ed_title_shop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请输入店铺名称"
                android:textColor="@color/text_middledark_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/divider_line_color" />

        <RelativeLayout
            android:id="@+id/changefenleirel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="行业分类"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_class_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:gravity="right"
                android:layout_toLeftOf="@+id/icon_arr2"
                android:hint="请选择您的行业分类"
                android:textColor="@color/text_middledark_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/icon_arr2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/divider_line_color" />

        <RelativeLayout
            android:id="@+id/changeshangquanrel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="选择商圈"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/icon_arr3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/icon_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择您所在的商圈"
                android:gravity="right"
                android:textColor="@color/text_middledark_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp"
                android:layout_alignTop="@+id/icon_arr3"
                android:layout_toLeftOf="@+id/icon_arr3"
                android:layout_toStartOf="@+id/icon_arr3"
                android:id="@+id/tv_circle_shop"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/divider_line_color" />

        <LinearLayout
            android:id="@+id/changePhoneNumRel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/view_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="联系电话"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/phoneNumText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:inputType="numberDecimal"
                android:gravity="center|right"
                android:hint="请输入您的联系电话"
                android:textColor="@color/text_middledark_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/divider_line_color" />

        <LinearLayout
            android:id="@+id/changeshoptimerel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="店铺地址"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_location_shop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:hint="请输入您的地址"
                android:gravity="center|right"
                android:background="@null"
                android:textColor="@color/text_middledark_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/divider_line_color" />

        <LinearLayout
            android:id="@+id/changeaddressrel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="小二自述"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_discription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="来段自述吧"
                android:gravity="center|right"
                android:textColor="@color/text_middledark_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="店铺图片"
                android:textColor="@color/text_dark_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:text="建议比例为16：9(最多10张)"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shopImageView"
                android:layout_width="96dp"
                android:layout_height="86dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:background="@drawable/shop_image_whitelin"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_defalut" />

            <TextView
                android:id="@+id/tv_img_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="相册共0张"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/shop_normal_btn_bg"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>