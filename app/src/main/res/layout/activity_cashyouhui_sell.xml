<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.dudu.duduhelper.CashSellActivity" >

    <include 
        android:id="@+id/head"
        layout="@layout/activity_head"/>
    <LinearLayout 
        android:background="#fff"
        android:layout_width="match_parent"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:layout_height="74dp"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/passwordEditText"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:hint="输入优惠券券号"
            android:inputType="number"
            android:textSize="14sp"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/confirmSellPasswordBtn" 
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/btn_bg"
            android:text="确认"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/step1lin"
        android:background="#fff" 
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="76dp">
        <TextView
            android:layout_marginTop="17dp" 
            android:layout_marginLeft="17dp"
            android:text="第一步、优惠券验证"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
        <TextView 
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请顾客出示优惠券，并输入密码进行验证"
            />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color_gray"/>
    <LinearLayout
        android:id="@+id/step2lin"
        android:background="#fff" 
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="76dp">
        <TextView
            android:layout_marginTop="17dp" 
            android:layout_marginLeft="17dp"
            android:text="第二步、验证优惠券信息"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
        <TextView 
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证优惠券是否有效"
            />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color_gray"/>
    <LinearLayout
        android:id="@+id/step3lin"
        android:background="#fff" 
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="76dp">
        <TextView
            android:layout_marginTop="17dp" 
            android:layout_marginLeft="17dp"
            android:text="第三步、使用完成"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
        <TextView 
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看使用结果，顾客将收到卡券核销或会员卡使用通知"
            />
    </LinearLayout>
    <TextView 
        android:id="@+id/showMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您输入的卡券有误，请确认后重新输入"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        android:textColor="@color/text_color_noselect"/>
    <Button
        android:id="@+id/scanbutton" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="扫码核销"
        android:textColor="#fff"
        android:textSize="16sp"
        android:background="@drawable/btn_larg_bg"/>
    <LinearLayout 
        android:id="@+id/stepSucessLin"
        android:layout_marginTop="12dp"
        android:layout_height="86dp"
        android:background="@color/title_color"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cashSellName"
            android:layout_marginTop="17dp"
            android:text="必胜客至尊披萨"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/cashSellDataTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="有效期：2015.08.01-2015.09.30" />

    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/enterSellbutton" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="确认核销"
        android:textColor="#fff"
        android:textSize="16sp"
        android:background="@drawable/btn_larg_bg"/>
</LinearLayout>
