<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_color">
    <TextView
        android:id="@+id/tv_date_item_money_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp"
        android:background="@color/title_hint_bg"
        android:textColor="@color/text_color_light"
        android:text="2016-09-06"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_subject_money_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家收款"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_color_gray"/>
            <TextView
                android:id="@+id/tv_body_money_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_subject_money_history"
                android:text="-扫码支付"
                android:textColor="@color/text_color_gray"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_time_money_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_body_money_history"
                android:text="16:22:06"
                android:textColor="@color/text_color_gray"
                android:textSize="16sp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_price_item_money_hishory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:text="+$25.00"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:textSize="22dp"
            android:textColor="@color/text_black_color"/>
       
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/tv_price_item_money_hishory"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_divide"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />
    

</LinearLayout>