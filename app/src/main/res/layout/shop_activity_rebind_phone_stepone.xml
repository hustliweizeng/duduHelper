<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activity.MyInfoActivity.ShopRebindPhoneSteponeActivity" >

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />

    <RelativeLayout
        android:id="@+id/rl_mobile_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_messcode"
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_erweima" />

        <TextView
            android:id="@+id/phoneNumText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btnGetmess"
            android:layout_toRightOf="@+id/icon_messcode"
            android:gravity="center_vertical"
            android:textColor="@color/text_dark_color"
            android:text="12345567"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnGetmess"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/shop_btn_mess_bg"
            android:padding="6dp"
            android:text="获取验证码"
            android:textColor="@color/text_white_color"
            android:textSize="14sp" /> 
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_messcode1"
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_erweima" />

        <EditText
            android:id="@+id/messageCodeEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/icon_messcode1"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="@color/text_gray_color"
            android:textSize="16dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/getPermessionbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/btn_larg_bg"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>