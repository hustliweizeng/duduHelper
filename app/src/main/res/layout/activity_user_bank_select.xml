<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    tools:context="com.dudu.duduhelper.Activity.MyInfoActivity.UserBankSelectActivity" >

    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/userbankswipeLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/head"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/cuserbankListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/line_color_gray"
            android:scrollbarThumbVertical="@color/text_color"
            android:scrollbarTrackVertical="@color/text_color_yellow"
            android:scrollbarSize="4dp"
            android:dividerHeight="1dp"
             />
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
