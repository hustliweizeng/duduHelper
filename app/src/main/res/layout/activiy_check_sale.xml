<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_color"
              android:id="@+id/ll_all"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/head"
        layout="@layout/activity_head" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_up1_check_sale"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_up_check_sale"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_check_status_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_success"

                        />
                    <TextView
                        android:id="@+id/tv_check_status_check_sale"
                        android:layout_marginTop="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/text_remind"
                        android:textSize="16dp"
                        android:layout_marginBottom="20dp"
                        android:text="该优惠券核销成功"/>


                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:padding="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="visible"
                android:id="@+id/ll_content_check_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_up_check_sale"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:src="@drawable/icon_xuxian"/>
                <LinearLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="商品名称"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_name_check_sale"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:paddingLeft="15dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </LinearLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="商品原价"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_old_price_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="优惠价"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="优惠价"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_now_price_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="抵用券"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="商品数量"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_stock_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="抵用券"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="发放商家"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_from_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="抵用券"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="领取者"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_user_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="抵用券"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="领取人姓名"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_username_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="抵用券"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="联系电话"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_mobile_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="抵用券"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="领取时间"
                        android:textColor="@color/text_color_gray"
                        />
                    <TextView
                        android:id="@+id/tv_gettime_check_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="抵用券"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_remind"
                        />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
        
    </ScrollView>
    
    

    <Button
        android:id="@+id/btn_subimit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:text="继续核销"
        android:textColor="@color/bg_white_color"
        android:background="@color/text_remind"
        />


</LinearLayout>