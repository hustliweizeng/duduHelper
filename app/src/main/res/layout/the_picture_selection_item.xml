<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framelayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <org.fireking.app.imagelib.view.MyImageView
        android:id="@+id/child_image"
        android:layout_width="fill_parent"
        android:layout_height="118dip"
        android:scaleType="centerCrop" />

    <com.dudu.helper3.widget.SmoothCheckBox
        android:id="@+id/child_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:color_checked="@color/text_color"
        app:color_unchecked="@color/text_color_gray"
        android:layout_gravity="right"
        android:layout_margin="4dp"/>

</FrameLayout>