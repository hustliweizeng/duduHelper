<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/head_color_red"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relayout_mytitle"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/head_color_red"
            android:paddingBottom="14dp"
            android:paddingRight="20dp"
            android:paddingTop="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_btn_fanhui"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="活动红包"
            android:textColor="@color/bg_white_color"
            android:textSize="19sp"
            />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edit_bg2"
        android:hint="请输入红包名称"
        android:paddingLeft="16dp"
        android:textColorHint="@color/text_hint_color"
        android:textSize="16sp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_redbag_yello">

        <TextView
            android:id="@+id/tv_edit_redbag1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="活动时间"
            android:textColor="@color/text_color_gray"
            android:textSize="16dp"

            />

        <LinearLayout
            android:id="@+id/ll_edit_redbag"
            android:layout_below="@id/tv_edit_redbag1_time"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/bg_select_date"
           android:layout_margin="16dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/startTimeRel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/startTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="44dp"
                    android:gravity="right"
                    android:text="起始时间"
                    android:textColor="@color/text_dark_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="44dp"
                    android:text="开始时间>"
                    android:textColor="@color/text_gray_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <ImageView
                    android:src="@drawable/icon_calender"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/finishTimeRel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/finishTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="17dp"
                    android:gravity="right"
                    android:text="结束时间"
                    android:textColor="@color/text_dark_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:text="结束时间>"
                    android:textColor="@color/text_gray_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_create_redbag1"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ll_edit_redbag"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_create_redbag"
            android:text="下一步"
            android:textColor="@color/text_color_grey1"
            android:textSize="16sp"
            />



    </RelativeLayout>

</LinearLayout>