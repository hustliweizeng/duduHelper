<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
		    <solid android:color="@color/text_green_color" />      
		     <stroke  
		        android:width="1dp"         
		        android:color="@color/text_green_color" />  
		      <padding  
		        android:bottom="1dp"   
		        android:top="1dp"
		        android:left="1dp"
		        android:right="1dp" />
		      <corners android:topLeftRadius="1.2dp"     
		             android:topRightRadius="1.2dp"      
		             android:bottomRightRadius="1.2dp"     
		             android:bottomLeftRadius="1.2dp"/>     
		</shape>
    </item>
    <item android:state_pressed="true">
	   <shape>
		    <solid android:color="@color/text_white_color" />      
		     <stroke  
		        android:width="1dp"         
		        android:color="@color/text_middledark_color" />  
		      <padding  
		        android:bottom="1dp"   
		        android:top="1dp"
		        android:left="1dp"
		        android:right="1dp" />
		      <corners android:topLeftRadius="1.2dp"     
		             android:topRightRadius="1.2dp"      
		             android:bottomRightRadius="1.2dp"     
		             android:bottomLeftRadius="1.2dp"/>     
		</shape>
    </item>
    <item android:state_selected="true">
	   <shape>
		    <solid android:color="@color/text_white_color" />      
		     <stroke  
		        android:width="1dp"         
		        android:color="#ed6a58" />  
		      <padding  
		        android:bottom="1dp"   
		        android:top="1dp"
		        android:left="1dp"
		        android:right="1dp" />
		      <corners android:topLeftRadius="1.2dp"     
		             android:topRightRadius="1.2dp"      
		             android:bottomRightRadius="1.2dp"     
		             android:bottomLeftRadius="1.2dp"/>     
		</shape>
    </item>
</selector>
