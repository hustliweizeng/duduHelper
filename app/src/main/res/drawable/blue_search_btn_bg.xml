<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
		    <solid android:color="#fff" />      
		     <stroke  
		        android:width="0.5dp"         
		        android:color="@color/line_color_gray" />  
		      <padding  
		        android:bottom="1dp"   
		        android:top="1dp"
		        android:left="1dp"
		        android:right="1dp" />
		      <corners android:topLeftRadius="1.2dp"     
		             android:topRightRadius="1.2dp"      
		             android:bottomRightRadius="1.2dp"     
		             android:bottomLeftRadius="1.2dp"/>     
		</shape>
    </item>
    <item android:state_pressed="true">
	   <shape>
		    <solid android:color="@color/line_color_gray" />      
		     <stroke  
		        android:width="0.5dp"         
		        android:color="@color/line_color_gray" />  
		      <padding  
		        android:bottom="1dp"   
		        android:top="1dp"
		        android:left="1dp"
		        android:right="1dp" />
		      <corners android:topLeftRadius="1.2dp"     
		             android:topRightRadius="1.2dp"      
		             android:bottomRightRadius="1.2dp"     
		             android:bottomLeftRadius="1.2dp"/>     
		</shape>
    </item>
</selector>
